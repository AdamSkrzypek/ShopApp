{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "customerDetailsRequest": {
      "type": "object",
      "properties": {
        "personDTO": {
          "type": "object",
          "properties": {
            "firstName": { "type": "string" },
            "lastName": { "type": "string" },
            "email": { "type": "string" },
            "phoneNumber": { "type": "string" }
          },
          "required": ["firstName", "lastName", "email", "phoneNumber"]
        },
        "addressDTO": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "postalCode": { "type": "string" },
            "country": { "type": "string" }
          },
          "required": ["street", "city", "postalCode", "country"]
        }
      },
      "required": ["personDTO", "addressDTO"]
    },
    "orderItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "productId": { "type": "string", "format": "uuid" },
          "productName": { "type": "string" },
          "quantity": { "type": "integer" },
          "price": { "type": "number" },
          "unitPrice": { "type": "number" }
        },
        "required": ["productId", "productName", "quantity", "price", "unitPrice"]
      }
    }
  },
  "required": ["customerDetailsRequest", "orderItems"]
}